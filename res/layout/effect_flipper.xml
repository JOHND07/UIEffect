<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/widget"
  android:orientation="vertical"
  android:layout_margin="0px">
  
  <ViewFlipper
  android:id="@+id/eff_image_flipper"
  android:layout_width="wrap_content"
  android:layout_height="fill_parent">

  <ImageView 
  android:id="@+id/eff_image_flipper_image1"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/eff_flipper1"  
  />

  <ImageView 
  android:id="@+id/eff_image_flipper_image2"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/eff_flipper2"  
  />
    
  </ViewFlipper>

    <CheckBox
    android:id="@+id/eff_image_flipper_3d_cb"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="使用3D切换"
    android:layout_x="50px"
    android:layout_y="192px">
    </CheckBox>

    <Spinner
    android:id="@+id/eff_image_flipper_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    </Spinner>
    
</LinearLayout>
